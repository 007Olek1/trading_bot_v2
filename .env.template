# ====================================
# TRADING BOT V3.5 CONFIGURATION
# ====================================

# Bybit API (получить на https://www.bybit.com/app/user/api-management)
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Telegram Bot (создать через @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_bot
DB_PASSWORD=trading_bot_password

# OpenAI API (для LLM анализа)
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# ИНСТРУКЦИИ ПО НАСТРОЙКЕ:
# ====================================
# 1. Скопируйте этот файл в .env
# 2. Заполните все значения your_*_here
# 3. Убедитесь что .env добавлен в .gitignore
# 4. Запустите бота: python3 trading_bot_v3_main.py